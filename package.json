{
  "name": "@shiftbloom-studio/circadian-ui",
  "version": "0.2.0",
  "description": "Accessible, time-aware theming for React and Next.js.",
  "keywords": [
    "react",
    "nextjs",
    "theme",
    "accessibility",
    "tailwind",
    "wcag",
    "design-tokens"
  ],
  "homepage": "https://github.com/shiftbloom-studio/circadian-ui#readme",
  "bugs": {
    "url": "https://github.com/shiftbloom-studio/circadian-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiftbloom-studio/circadian-ui.git"
  },
  "license": "MIT",
  "author": "",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "node scripts/clean.mjs",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.28.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
